<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_issuepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/issue"

    tools:context="com.example.admin.libraryproject.book_issuepage"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6fcccccc"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6fcccccc"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Issue"
        android:textSize="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/issue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issue"
        android:text="Book Id"
        android:textColor="#000"
        android:textSize="30dp"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/id_book"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape6"
        android:hint="Enter Book Id"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/id_book"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/your_book"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_book"
        android:text="Book Name"
        android:textColor="#000"
        android:textSize="30dp"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/books_name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape6"
        android:hint="Enter Book Name"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/books_name"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/name_book"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/name_book"
    android:text="Lend Date"
    android:textColor="#000"
    android:textSize="30dp"
     android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"

    android:id="@+id/books_lend"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape6"
        android:hint="Book Lend Date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/books_lend"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/lends"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lends"
        android:text="Return Date"
        android:textColor="#000"
        android:textSize="30dp"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"

        android:id="@+id/books_return"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape6"
        android:hint="Book return Date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/books_return"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISSUE"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@+id/books_return"
        android:padding="10dp"
        android:background="@drawable/shape4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

       />

    </LinearLayout>

</ScrollView>

</RelativeLayout>
