<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_search"
    tools:context="com.example.admin.libraryproject.book_search"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/search"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/search1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:layout_toRightOf="@+id/search1"
        android:text="Books Search"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/text_book"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_book"
        android:text="Get the list of available books"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/list1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list1"
        android:text="Title"
        android:textColor="#fff"
        android:padding="5dp"
        android:background="#20bddc"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="40dp"
        android:id="@+id/title"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:hint="Enter the title of the book"
        android:background="@drawable/shape6"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColorHint="#494747"
        android:id="@+id/book_title"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_title"
        android:text="Author Name"
        android:textColor="#fff"
        android:padding="5dp"
        android:background="#20bddc"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/author"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author"
        android:hint="Enter Author's name"
        android:background="@drawable/shape6"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColorHint="#494747"
        android:id="@+id/book_author"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_author"
        android:background="@drawable/shape3"
        android:text="Click here to Search"
        android:padding="10dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:onClick="search"
        />


</RelativeLayout>
