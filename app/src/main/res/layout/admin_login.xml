<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_back"
    tools:context="com.example.admin.libraryproject.admin_login"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textSize="50dp"
        android:textColor="#fff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/admin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/admin"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#6f000000"
        android:layout_below="@+id/admin"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sign_in"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/sign_in"
            android:src="@drawable/user1"
            android:layout_marginLeft="200dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the form below to get instant access"
            android:layout_below="@+id/sign_in"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/fill"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fill"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:hint="User Name"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/userr"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userr"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:hint="Password"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/passd"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passd"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="#29aec6"
            android:text="Submit"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="#fff"
            android:onClick="submit"
            android:id="@+id/submit"
            />
        </RelativeLayout>

</RelativeLayout>







